<div class="form-group {{if showLookupFieldValueError 'has-error'}}">
  <label for="lookupFieldValue">Pseudonym</label>
  {{input value=model.lookup_field_value type="text" class="form-control" id="lookupFieldValue" placeholder="Pseudonym" focus-out="setLookupFieldValueTouched"}}
</div>
<div class="form-group {{if showReferenceTextError 'has-error'}}">
  <label for="referenceInput">Verklig författare</label>
  {{textarea value=model.reference_text type="text" class="form-control" id="referenceInput" placeholder="Verklig författare" focus-out="setReferenceTextTouched"}}
</div>
