<div class="container-fluid">
  <div class="row">
    <div class="form-col {{unless sidebarRight 'sidebar-left' 'sidebar-right'}}">

      <ul class="nav nav-tabs nav-justified">
        <li role="presentation" class="{{if showMainCard 'active'}}"><a href="javascript:void();" {{action 'showMainCard'}}>Huvudkort</a></li>
        <li role="presentation" class="{{if showReferenceCard 'active'}}"><a href="javascript:void();" {{action 'showReferenceCard'}}>Hänvisningskort</a></li>
      </ul>
      {{#if showMainCard}}
      <div>
        <form>


          <div class="form-inline">
            <label for="signumInput">Signum</label>
            <div class="form-group">
              {{#x-select value=signum class="form-control"}}
              {{#x-option}}
              Välj...
              {{/x-option}}
              {{#each signumList key="@index" as |signumItem|}}
              {{#x-option value=signumItem}}
              {{signumItem}}
              {{/x-option}}
              {{/each}}
              {{/x-select}}
            </div>
            <div class="checkbox">
              <label>
                {{input type="checkbox" name="isSv" checked=isSv}} Sv
              </label>
            </div>
          </div>
          <hr/>

          <div class="form-group">
            <label for="lookupFieldValue">Huvuduppslag</label>
            {{input value=lookupFieldValue type="text" class="form-control" id="lookupFieldValue" placeholder="Huvuduppslag"}}
          </div>


          {{#radio-button
            value="author"
            groupValue=lookupFieldType}}
            Författare
            {{/radio-button}}
            {{#radio-button
              value="title"
              groupValue=lookupFieldType}}
              Titel
              {{/radio-button}}

              {{#if isLookupFieldTypeAuthor}}
              {{#each authors as |author|}}
              <div class="form-group">
                {{input value=author.author type="text" class="form-control" placeholder="Författare"}}
              </div>
              {{/each}}
              <div>
                <button {{action 'addAuthor'}} class="btn btn-link">+ Ytterligare författare</button>
              </div>
              {{/if}}

              <hr/>

              <div class="form-group">
                <label for="titleInput">Titel</label>
                {{textarea rows="3" value=title type="text" class="form-control" id="titleInput" placeholder="Titel" disabled=isTitleLookup}}
              </div>

              <div class="row">
                <div class="col-xs-12">
                  <label>År</label>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <div class="form-inline">
                    <div class="form-group">
                      {{input value=year1 type="text" class="form-control" id="yearInput1" placeholder="År" disabled=isWithoutYear}}
                    </div>
                    -
                    <div class="form-group">
                      {{input value=year2 type="text" class="form-control" id="yearInput2" placeholder="År" disabled=isWithoutYear}}
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-12">
                  <div class="checkbox">
                    <label>
                      {{input type="checkbox" name="isWithoutYear" checked=isWithoutYear}} Utan år
                    </label>
                  </div>
                </div>
              </div>



              <div class="form-group">
                <label for="problemInput">Problem</label>
                {{textarea rows="3" value=problem type="text" class="form-control" id="problemInput" placeholder="Problembeskrivning"}}
              </div>
            </form>
          </div>
          {{/if}}
          {{#if showReferenceCard}}
          <div>
            <form>
              <div class="form-group">
                <label for="authorInput">Författare/Titeluppslag</label>
                {{input value=author type="text" class="form-control" id="authorInput" placeholder="Författare"}}
              </div>
              <div class="form-group">
                <label for="referenceInput">Se</label>
                {{textarea value=title type="text" class="form-control" id="referenceInput" placeholder="Hänvisning"}}
              </div>
              <div class="form-group">
                <label for="problemInput">Problem</label>
                {{textarea rows="3" value=problem type="text" class="form-control" id="problemInput" placeholder="Problembeskrivning"}}
              </div>
            </form>
          </div>
          {{/if}}
          <div class="pull-left">
            <button {{action 'previous' model}} class="btn btn-link">Avbryt</button>
          </div>
          <div class="pull-right">
            <button {{action 'next' model}} class="btn btn-success">Klar</button>
          </div>
          <div class="clearfix">

          </div>
        </div>

        <div class="image-col {{unless sidebarRight 'sidebar-left' 'sidebar-right'}}">
          <img src="{{imageUrl}}" id="card-image" class="img-responsive">
        </div>

      </div>
    </div>
