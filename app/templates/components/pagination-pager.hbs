<ul class="pagination">
  {{#if pagination.previous}}
  <li>
    {{#link-to (query-params page=pagination.previous) class=""}}
    <span>Previous</span>
    {{/link-to}}
  </li>
  {{else}}
  <li class="disabled">
    <a href="javascript:void(0)">Previous</a>
  </li>
  {{/if}}
  {{#each pageArray as |page|}}
  {{#if page.spacer}}
  <li class="disabled spacer">...</li>
  {{else}}
  <li {{bind-attr class="page.active:active"}}>
    {{#link-to (query-params page=page.page)}}{{page.page}}{{/link-to}}
  </li>
  {{/if}}
  {{/each}}
  {{#if pagination.next}}
  <li>
    {{#link-to (query-params page=pagination.next)}}
    <span>Next</span>
    {{/link-to}}
  </li>
  {{else}}
  <li class="disabled">
    <a href="javascript:void(0)"><span>Next</span></a>
  </li>
  {{/if}}
</ul>
